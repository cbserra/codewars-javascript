{
  "name": "@codewars/test-compat",
  "version": "1.1.0",
  "description": "Provides functions from the deprecated custom test framework",
  "main": "lib/index.js",
  "files": [
    "dist/"
  ],
  "repository": "https://github.com/codewars/javascript-test-compat",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "tsc",
    "tests": "mocha",
    "lint:check": "prettier -c .",
    "lint:fix": "prettier --write .",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.0.1",
    "chai": "^4.3.7",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^4.2.5",
    "mocha": "^10.2.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^2.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "spec": "test/kyu/**/*.spec.ts",
    "timeout": 10000
  },
  "dependencies": {
    "tslint": "^6.1.3"
  }
}
