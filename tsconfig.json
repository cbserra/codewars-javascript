{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "rootDirs": ["src", "tests"],
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "skipLibCheck": true,
    "types": ["node", "mocha", "chai"],
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "ES2020"
  },
  "exclude": ["node_modules", "lib", "tests", "src/deprecated"],
  "include": ["src/**/*.ts", "test/**/*.spec.ts"]
}
